<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <div>
        <h2>All blogs</h2>

        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <a class="single" href="/blogs/<%= blog._id%>">
                    <h3><%= blog.title %></h3>
                    <p><%= blog.snippet %></p>
                </a>
                
           <% }) %>
       <% } else { %>
        <p>There's no blog to display</p>
      <% } %>

       
    </div>
    <%- include('./partials/footer.ejs') %>
</body>
    
</html>